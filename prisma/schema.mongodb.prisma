generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL_MONGODB")
}

model Profiles {
  id String @id @map("_id")
  telephone String? @unique
  card Json? @default("{\n\"name\": \"John Doe\",\n\"number\": \"XXXX XXXX XXXX XXXX\",\n\"date\": "XX/XX\"\n}")
}

model Specifications {
  id String @id @map("_id")
  tags String[]?
  config Json? @default("{\n\"os\": \"Windows 11\",\n\"ram\": \"X Go\",\n\"space\": "X Go\"\n}")
}