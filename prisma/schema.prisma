generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id BigInt @id @default(autoincrement())
  name String @unique
  mail String @unique
  password String
  wallet String
  games UsersOnGames[]
  reviews Review[]
}

model Game {
  id BigInt @id @default(autoincrement())
  title String
  description String
  languages String[]
  genres String[]
  developer String
  editor String
  releaseDate DateTime
  players UsersOnGames[]
  reviews Review[]
}

model Review {
  author User @relation(fields: [authorId], references: [id])
  authorId BigInt
  game Game @relation(fields: [gameId], references: [id])
  gameId BigInt
  recommended Boolean
  text String
  language String

  @@id([authorId, gameId])
}

model UsersOnGames {
  user User @relation(fields: [userId], references: [id])
  userId BigInt
  game Game @relation(fields: [gameId], references: [id])
  gameId BigInt
  purchasedAt DateTime @default(now())

  @@id([userId, gameId])
}